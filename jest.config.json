{
  "preset": "ts-jest",
  "testRegex": ".*\\.test\\.(t|j)sx?$",
  "transform": {
    "\\.[jt]sx?$": [
      "ts-jest",
      {
        "useESM": true
      }
    ]
  },
  "moduleNameMapper": {
    "^(\\.|\\.\\.)\\/(.+)\\.js": "$1/$2",
    "^@fullstackcraftllc/codevideo-backend-engine$": "<rootDir>/node_modules/@fullstackcraftllc/codevideo-backend-engine"
  },
  "extensionsToTreatAsEsm": [
    ".ts"
  ],
  "transformIgnorePatterns": ["/node_modules/(?!(@fullstackcraftllc/codevideo-backend-engine)/)"]
}